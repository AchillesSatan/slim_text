{
    "name": "Slim Text",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Slim Text is a slim text editor which runs inside a web browser.",
    "icons": { "128": "icon/icon128.png" },
    "options_page": "html/options.html",
    "permissions": [
        "tabs",
        "storage"
    ],

    "background": { "scripts": ["js/background.js"] },

    "browser_action": {
        "default_icon": "icon/icon19.png"
    },

    "plugins": [
        {
            "path": "plugin/npFileManager.so",
            "public": false
        }
    ]
}
